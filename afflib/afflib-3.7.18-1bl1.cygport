HOMEPAGE="https://github.com/sshock/AFFLIBv3"
SRC_URI="https://github.com/sshock/AFFLIBv3/archive/v${PV}.tar.gz"
SRC_DIR="AFFLIBv3-${PV}"

CATEGORY="Libs"
SUMMARY="Advanced Forensic Format Library and Tools"
DESCRIPTION="AFF Library and Toolkit is a set of programs for working with computer
forensic information."

CYGCONF_ARGS="
	--enable-maintainer-mode
	--enable-s3
	--disable-qemu
	--enable-python
	--disable-fuse
"

DOCS="
	doc/*.txt
"

PKG_NAMES="
	${PN}
	lib${PN}0
	lib${PN}-devel
	python2-${PN}
"
afflib_CONTENTS="
	usr/bin/*.exe
	usr/share
"
libafflib0_CONTENTS="
	usr/bin/*.dll
"
libafflib_devel_CONTENTS="
	usr/include
	usr/lib/lib${PN}*
	usr/lib/pkgconfig
"
python2_afflib_CONTENTS="
	usr/lib/python2*
"
afflib_SUMMARY="${SUMMARY} (utilities)"
libafflib0_SUMMARY="${SUMMARY} (runtime)"
libafflib_devel_SUMMARY="${SUMMARY} (development)"
python2_afflib_SUMMARY="${SUMMARY} (python2 bindings)"
